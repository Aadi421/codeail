<link rel="stylesheet" href="/css/sign_in.css">

        <section class="sign-in">
            <div class="signin-container">
                <div class="signin-content">
                
                    <div class="signin-image">
                        <figure><img src="/image/signin-image.jpg" alt="sing up image"></figure>
                        <a href="/users/sign-up" class="signin-image-link" title="back to sign up page"><h4>Create an account</h4></a>
                    </div>

                    <div class="signin-form">
                        <h2 class="form-title">Sign In</h2>
                        <form method="POST" action="/users/create-session" class="register-form" id="login-form">
                            <div class="form-group">
                                <label for="your_name"><i class="fa fa-envelope" aria-hidden="true"></i></label>
                                <input type="text" name="email" id="your_name" placeholder="Your Email"/>
                            </div>
                            <div class="form-group">
                                <label for="your_pass"><i class="fa fa-lock" aria-hidden="true"></i></label>
                                <input type="password" name="password" id="your_pass" placeholder="Password"/>
                            </div>
                            
                            <div class="form-group form-button">
                                <div class="button-div">
                                    <input type="submit" name="signin" id="signin" class="form-submit" value="Sign In"/>
                                </div>
                            </div>
                        </form>
                        <div class="social-login">
                            <span class="social-label">Or login with</span>
                            <div class="socials">
                                <p id="googleSignLink"><a href="/users/auth/google"  title="click here to google signIn"><i class="fa fa-google-plus" aria-hidden="true"></i></a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>